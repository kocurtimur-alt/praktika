<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Простое рисование" Height="450" Width="800">
    <DockPanel>
        <!-- Панель с кнопками -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray" Height="40">
            <Button x:Name="LineButton" Content="Линия" Width="80" Margin="5"/>
            <Button x:Name="CircleButton" Content="Круг" Width="80" Margin="5"/>
            <Button x:Name="SquareButton" Content="Квадрат" Width="80" Margin="5"/>
        </StackPanel>

        <!-- Холст для рисования -->
        <Canvas x:Name="DrawingCanvas" Background="White"/>
    </DockPanel>
</Window>
